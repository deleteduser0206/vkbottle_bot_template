{   
    "files.exclude": {
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.ipynb_checkpoints": true,
        "**/*.pyc": true
    },

    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
    },

    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
    },

    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
    }
}